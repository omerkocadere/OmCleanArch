{
  "DatabaseSettings": {
    "SqliteConnectionString": "Data source=OmCleanArch.db",
    "PostgresConnectionString": "Host=localhost;Port=5432;Database=OmCleanArch;Username=postgres;Password=postgrespw",
    "ProviderGuide": "Valid values: Sqlite, Postgres",
    "Provider": "Sqlite"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
