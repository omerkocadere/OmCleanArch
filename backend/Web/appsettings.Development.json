{
  "DatabaseSettings": {
    "SqliteConnectionString": "Data source=OmCleanArch",
    "PostgresConnectionString": "Host=localhost;Port=5432;Database=OmCleanArch;Username=postgres;Password=postgrespw",
    "ProviderGuide": "Valid values: Sqlite, Postgres",
    "Provider": "Sqlite"
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:18889"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:18889",
          "protocol": "grpc",
          "resourceAttributes": {
            "service.name": "OmCleanArch",
            "service.version": "1.0.0"
          }
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithSpan"]
  }
}
