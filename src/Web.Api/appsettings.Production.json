{
  "ConnectionStrings": {
    "om-seq": "http://seq:5341"
  },
  "DatabaseSettings": {
    "ProviderGuide": "Valid values: Sqlite, Postgres, SqlServer",
    "Provider": "SqlServer"
  },
  "Authentication": {
    "Provider": "Jwt",
    "Jwt": {
      "Issuer": "https://api.yourdomain.com",
      "Audience": "https://yourdomain.com",
      "ExpirationInMinutes": 30
    },
    "IdentityServer": {
      "Authority": "https://identity.yourdomain.com",
      "RequireHttpsMetadata": true,
      "ValidateAudience": true,
      "NameClaimType": "username"
    }
  },
  "RabbitMQ": {
    "Enabled": false,
    "Host": "rabbitmq",
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest",
    "Port": 5672
  },
  "Cache": {
    "Provider": "Memory",
    "DefaultTimeoutMinutes": 60,
    "RedisConnectionString": "redis:6379"
  },
  "BackgroundJobs": {
    "Enabled": false,
    "AutoInitialize": true,
    "Dashboard": {
      "Enabled": false,
      "Path": "/hangfire",
      "RequireAuthorization": true
    }
  },
  "ApiClients": {
    "DummyApiBaseUrl": "https://api.yourpartner.com"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "CleanArch": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/omcleanarch-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithSpan"]
  },
  "Aspire": {
    "Seq": {
      "DisableHealthChecks": true,
      "DisableHealthChecksReason": ""
    }
  },
  "CloudinarySettings": {
    "CloudName": "daubhewnv",
    "ApiKey": "154748253879529"
  },
  "AllowedHosts": "*"
}
