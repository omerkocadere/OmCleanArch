{
  "ConnectionStrings": {
    "om-seq": "http://localhost:5341"
  },
  "DatabaseSettings": {
    "SqliteConnectionString": "Data source=omcleanarch",
    "PostgresConnectionString": "Host=localhost;Port=5432;Database=omcleanarch;Username=postgres;Password=postgrespw",
    "ProviderGuide": "Valid values: Sqlite, Postgres",
    "Provider": "Postgres"
  },
  "BackgroundJobs": {
    "Enabled": false,
    "AutoInitialize": true,
    "Dashboard": {
      "Enabled": true,
      "Path": "/hangfire",
      "RequireAuthorization": false
    }
  },
  "OpenTelemetry": {
    "ServiceName": "OmCleanArch"
  },
  "Authentication": {
    "Provider": "IdentityServer",
    "Jwt": {
      "Secret": "mySecretKey12345678901234567890123456789012345678901234567890",
      "Issuer": "https://localhost:7243",
      "Audience": "https://localhost:7243",
      "ExpirationInMinutes": 60,
      "ClockSkew": "00:00:00"
    },
    "IdentityServer": {
      "Authority": "http://localhost:5001",
      "RequireHttpsMetadata": false,
      "ValidateAudience": false,
      "NameClaimType": "username"
    }
  },
  "ApiClients": {
    "DummyApiBaseUrl": "http://localhost:7702"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:18889",
          "protocol": "grpc",
          "resourceAttributes": {
            "service.name": "Seri-OmCleanArch"
          }
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithSpan"]
  }
}
