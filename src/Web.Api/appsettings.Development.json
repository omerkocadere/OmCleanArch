{
  "ConnectionStrings": {
    "om-seq": "http://localhost:5341"
  },
  "Cache": {
    "Provider": "Redis",
    "DefaultTimeoutMinutes": 30,
    "RedisConnectionString": "localhost:6379"
  },
  "DatabaseSettings": {
    "SqliteConnectionString": "Data source=omcleanarch",
    "PostgresConnectionString": "Host=localhost;Port=5432;Database=omcleanarch;Username=postgres;Password=postgrespw",
    "SqlServerConnectionString": "Server=localhost,1433;Database=omcleanarch;User Id=SA;Password=Password@1;TrustServerCertificate=true",
    "ProviderGuide": "Valid values: Sqlite, Postgres, SqlServer",
    "Provider": "SqlServer"
  },
  "BackgroundJobs": {
    "Enabled": false,
    "AutoInitialize": true,
    "Dashboard": {
      "Enabled": true,
      "Path": "/hangfire",
      "RequireAuthorization": false
    }
  },
  "Authentication": {
    "Provider": "Jwt",
    "Jwt": {
      "Secret": "mySecretKey12345678901234567890123456789012345678901234567890",
      "Issuer": "https://localhost:7243",
      "Audience": "https://localhost:7243",
      "ExpirationInMinutes": 15
    },
    "IdentityServer": {
      "Authority": "http://localhost:5001",
      "RequireHttpsMetadata": false,
      "ValidateAudience": false,
      "NameClaimType": "username"
    }
  },
  "ApiClients": {
    "DummyApiBaseUrl": "http://localhost:7702"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:18889",
          "protocol": "grpc",
          "resourceAttributes": {
            "service.name": "Seri-OmCleanArch"
          }
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithSpan"]
  },
  "Aspire": {
    "Seq": {
      "DisableHealthChecks": true,
      "DisableHealthChecksReason": "Seq container's /health endpoint does not work over HTTP, so Aspire health check always returns Unhealthy. Logging functionality is unaffected, but health check errors cause noise. Therefore, health checks are disabled."
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest",
    "Port": 5672
  }
}
