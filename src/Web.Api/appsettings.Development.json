{
  "ConnectionStrings": {
    "om-seq": "http://localhost:5341"
  },
  "DatabaseSettings": {
    "SqliteConnectionString": "Data source=omcleanarch",
    "PostgresConnectionString": "Host=localhost;Port=5432;Database=restore;Username=postgres;Password=postgrespw",
    "ProviderGuide": "Valid values: Sqlite, Postgres",
    "Provider": "Postgres"
  },
  "BackgroundJobs": {
    "Enabled": true,
    "AutoInitialize": true,
    "Dashboard": {
      "Enabled": true,
      "Path": "/hangfire",
      "RequireAuthorization": false
    }
  },
  "OpenTelemetry": {
    "ServiceName": "OmCleanArch"
  },

  "ApiClients": {
    "DummyApiBaseUrl": "http://localhost:7702"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:18889",
          "protocol": "grpc",
          "resourceAttributes": {
            "service.name": "Seri-OmCleanArch"
          }
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithSpan"]
  }
}
