# =======================
# OmCleanArch Environment Variables
# =======================

# Cache Configuration
# Valid providers: Memory, Redis
CACHE_PROVIDER=Memory
CACHE_DEFAULT_TIMEOUT_MINUTES=30
CACHE_REDIS_CONNECTION_STRING=localhost:6379

# Database Configuration  
# Valid providers: Sqlite, Postgres
DATABASE_PROVIDER=Postgres
DATABASE_POSTGRES_CONNECTION_STRING=Host=localhost;Port=5432;Database=omcleanarch;Username=postgres;Password=postgrespw
DATABASE_SQLITE_CONNECTION_STRING=Data source=omcleanarch

# Authentication Configuration
# Valid providers: Jwt, IdentityServer  
AUTH_PROVIDER=Jwt
AUTH_JWT_SECRET=YourSuperSecretKeyForJWTGenerationThatNeedsToBeAtLeast32Characters!
AUTH_JWT_ISSUER=CleanArch
AUTH_JWT_AUDIENCE=CleanArch
AUTH_JWT_EXPIRATION_MINUTES=60

# Background Jobs Configuration
BACKGROUND_JOBS_ENABLED=false
BACKGROUND_JOBS_AUTO_INITIALIZE=false
BACKGROUND_JOBS_DASHBOARD_ENABLED=false
BACKGROUND_JOBS_DASHBOARD_PATH=/hangfire
BACKGROUND_JOBS_DASHBOARD_REQUIRE_AUTH=true

# Logging Configuration
SEQ_URL=http://localhost:5341
ASPNETCORE_ENVIRONMENT=Development

# API Configuration
ALLOWED_HOSTS=*