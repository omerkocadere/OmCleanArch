{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: Web.API Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/src/Web.Api/Web.Api.csproj"
    },
    {
      "name": "C#: SearchService Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/other-services/SearchService/SearchService.csproj"
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": ".NET Core Launch with Seq",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Start Seq Container",
      "program": "${workspaceFolder}/src/Web.Api/bin/Debug/net9.0/CleanArch.Web.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Web.Api",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s/api"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
